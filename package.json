{
  "name": "wine-search-load-test",
  "version": "1.0.0",
  "description": "Load testing configuration for Wine Search API",
  "devDependencies": {
    "newman": "^6.0.0",
    "newman-reporter-html": "^1.0.5"
  },
  "scripts": {
    "test": "newman run wine-search-api-tests.postman_collection.json --environment wine-search-test-environment.postman_environment.json",
    "test:html": "newman run wine-search-api-tests.postman_collection.json --environment wine-search-test-environment.postman_environment.json --reporters html,cli --reporter-html-export ./test-results/report.html",
    "test:load": "newman run wine-search-api-tests.postman_collection.json --environment wine-search-test-environment.postman_environment.json --iteration-count 10 --delay-request 50",
    "test:performance": "newman run wine-search-api-tests.postman_collection.json --environment wine-search-test-environment.postman_environment.json --iteration-count 50 --delay-request 25 --reporters cli,json --reporter-json-export ./test-results/performance.json"
  }
}